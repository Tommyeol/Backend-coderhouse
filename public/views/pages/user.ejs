<%- include('../partials/header.ejs', { title: 'User - Tiendita' , showNavbar: true }); -%>

  <main>
    <section class="user py-5">
      <div class="container">
        <div class="text-center mb-5">
          <h1>My Account</h1>
        </div>
        <div class="d-flex justify-content-center gap-5">
          <div class="" style="height: 300px; width: 300px;">
            <img src="uploads/<%= user.image %>" alt="<%= user.username %>"
              style="width: 100%; height: 100%; object-fit: cover;">
          </div>
          <div class="user__content">
            <h2 class="mb-4">Welcome, <%= user.username %> !</h2>
            <div class="border border-dark p-5 rounded">
              <h4 class="mb-4">Username information</h4>
              <ul class="list-unstyled d-flex flex-column gap-3">
                <li>Email: <%= user.email %>
                </li>
                <li>Address: <%= user.address %>
                </li>
                <li>Age: <%= user.age %>
                </li>
                <li>Phone: <%= user.phone %>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <%- include('../partials/footer.ejs', { showFooter: true }); -%>