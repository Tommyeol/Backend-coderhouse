<section class="p-4 bg-secondary" style="--bs-bg-opacity: .5;">
  <h2 class="text-primary">Enter product</h2>
  <form id="form-add-product">
    <div class="mb-3">
      <label class="form-label fw-bold" for="name">Name</label>
      <input id="name-product" class="form-control" type="text" name="name" />
    </div>
    <div class="mb-3">
      <label class="form-label fw-bold" for="price">Price</label>
      <input
        id="price-product"
        class="form-control"
        type="number"
        name="price"
      />
    </div>
    <div class="mb-3">
      <label class="form-label fw-bold" for="img">Picture</label>
      <input id="img-product" class="form-control" type="url" name="img" />
    </div>
    <div class="mb-3">
      <input class="btn btn-success" type="submit" value="Send" />
    </div>
  </form>
</section>
<section class="p-4 bg-secondary" style="--bs-bg-opacity: .5;">
  <h2 class="text-primary">Products view</h2>
  <table class="table table-dark">
    <thead>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Picture</th>
      </tr>
    </thead>
    <tbody id="table-products"></tbody>
  </table>
  <h2 id="no-products" class="bg-light p-4 text-danger">There are no listed
    products</h2>
</section>
<section class="p-4 bg-secondary mt-4" style="--bs-bg-opacity: .5;">
  <h2 class="text-primary mb-4">Message center</h2>
  <input
    id="user-email"
    class="form-control col-6"
    type="mail"
    id="usermail"
    placeholder="Type your email"
  />
  <hr />
  <div id="table-chat" class="my-4"></div>
  <form id="chat-form" class="form-inline">
    <input
      id="chat-message"
      class="form-control mb-3"
      type="text"
      name="chatmessage"
      placeholder="Type a message..."
    />
    <button class="btn btn-primary" type="submit">Send</button>
  </form>
</section>