<section class="p-3 col-lg-4 m-auto bg-secondary" style="--bs-bg-opacity: .5;">
  <h1 class="text-center mb-3">Register</h1>
  <form action="/registerUser" method="POST" id="form-add-product" class="px-4">
    <div class="mb-3">
      <input
        id="name-product"
        class="form-control"
        type="text"
        name="name"
        placeholder="Name"
      />
    </div>
    <div class="mb-3">
      <input
        id="price-product"
        class="form-control"
        type="password"
        name="password"
        placeholder="Password"
      />
    </div>
    <div class="mb-3">
      <input
        id="img-product"
        class="form-control"
        name="address"
        placeholder="Address"
      />
    </div>
    <div class="d-flex justify-content-center">
      <input class="btn btn-success" type="submit" value="Register" />
    </div>
  </form>
</section>